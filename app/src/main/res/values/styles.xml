<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButtonStyle">
        <item name="android:textSize">@dimen/calc_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="CalcButtonStyle.Num">
        <item name="backgroundTint">@color/blue_200</item>
    </style>

    <style name="CalcButtonStyle.Sign">
        <item name="backgroundTint">@color/blue_400</item>
    </style>

    <style name="CalcButtonStyle.Fun">
        <item name="backgroundTint">@color/blue_800</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin_top</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_800</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">@dimen/double_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/blue_800</item>
        <item name="background">@drawable/background_night</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:windowBackground">@drawable/background_night</item>
        <item name="backgroundTint">@color/gray_500</item>
    </style>

    <style name="DayTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/gray_600</item>
        <item name="background">@drawable/background</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="backgroundTint">@color/blue_200</item>
    </style>

</resources>